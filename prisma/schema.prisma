generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CivilServant {
  id                                  Int                   @id @default(autoincrement())
  surname                             String                @db.VarChar(100)
  firstname                           String                @db.VarChar(100)
  middlename                          String?               @db.VarChar(100)
  gender                              gender_enum
  dateOfBirth                         DateTime              @map("date_of_birth") @db.Date
  phoneNumber                         String                @map("phone_number") @db.VarChar(20)
  email                               String?               @db.VarChar(100)
  homeAddress                         String                @map("home_address")
  nationality                         String                @db.VarChar(50)
  maritalStatus                       marital_status_enum   @map("marital_status")
  maritalStatusOther                  String?               @map("marital_status_other") @db.VarChar(50)
  idCardServiceNumber                 String                @map("id_card_service_number") @db.VarChar(50)
  nin                                 String                @unique(map: "unique_nin") @db.VarChar(11)
  verificationCode                    String                @map("verification_code") @db.VarChar(50)
  stateOfOrigin                       state_enum            @map("state_of_origin")
  localGovernmentArea                 String                @map("local_government_area") @db.VarChar(100)
  cadre                               cadre_enum
  cadreOther                          String?               @map("cadre_other") @db.VarChar(200)
  department                          String                @db.VarChar(200)
  gradeLevel                          Int                   @map("grade_level")
  dutyStation                         String                @map("duty_station") @db.VarChar(200)
  typeOfAppointment                   appointment_type_enum @map("type_of_appointment")
  dateOfFirstAppointment              DateTime              @map("date_of_first_appointment") @db.Date
  dateOfConfirmation                  DateTime?             @map("date_of_confirmation") @db.Date
  dateOfPreviousAppointment           DateTime              @map("date_of_previous_appointment") @db.Date
  dateOfPresentAppointment            DateTime              @map("date_of_present_appointment") @db.Date
  currentMda                          mda_enum              @map("current_mda")
  mdaOther                            String?               @map("mda_other") @db.VarChar(200)
  previousMdas                        Json?                 @map("previous_mdas")
  academicQualifications              String                @map("academic_qualifications")
  dateOfFirstSchoolLeavingCertificate DateTime              @map("date_of_first_school_leaving_certificate") @db.Date
  areasOfCoreCompetency               Json                  @map("areas_of_core_competency")
  passportUrl                         String?               @map("passport_url") @db.VarChar(500)
  consentGiven                        Boolean               @default(true) @map("consent_given")
  createdAt                           DateTime?             @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt                           DateTime?             @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([cadre], map: "idx_cadre")
  @@index([currentMda], map: "idx_current_mda")
  @@index([gradeLevel], map: "idx_grade_level")
  @@index([idCardServiceNumber], map: "idx_id_card_service_number")
  @@index([nin], map: "idx_nin")
  @@index([stateOfOrigin], map: "idx_state_of_origin")
  @@index([surname, firstname], map: "idx_surname_firstname")
  @@map("civil_servants")
}

